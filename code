using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int oldWomen;
            int waitingTimeOneOldWoman = 10;
            int waitingTime;

            Console.WriteLine("Вы в очереди, сколько вы видите старушек?");
            oldWomen = Convert.ToInt32(Console.ReadLine());

            waitingTime = oldWomen * waitingTimeOneOldWoman;

            Console.WriteLine("К сожалению вам осталось ждать целых " + waitingTime + "минут");
        }
    }
}
